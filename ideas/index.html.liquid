    {% if space.ideas != empty %}
    <ul id="entries-gallery">
        {% paginate space.ideas by 15 %}
        {% for idea in paginate %}
        <li class=""><a href="{{idea.permalink}}" title="link to full page for {{idea.title}}"><img src="{{idea.images.first.medium_square}}" alt="Image for {{idea.title}}" width="157" height="157" /><h2>{{idea.title}}</h2>
        <span class="like-count"><span class="heart">&hearts;</span> {{idea.likes}}</span></a></li>
        {% endfor %}
        {% endpaginate %}
    </ul>
    {% else %}

    <div class="empty">
      <h1>There aren't any photos here yet!</h1>
      {% if current_user %}
      <p>be the first to add photo by using the 'add a new idea' button</p>
      {% else %}
      <p>login with twitter or facebook to be the first to add a photo</p>
      {% endif %}
    </div>

    {% endif %}

    <!-- Paging -->
    <div id="page-navigation">
        <a href="{{ pagination.next_url }}" title="#" class="next">next page</a>
        <a href="{{ pagination.previous_url }}" title="#" class="prev">previous page</a>
    </div>