{% assign asset_url="http://localhost:8080" %}
<!DOCTYPE html>
    <!--[if lt IE 7 ]> <html class="no-js ie6" lang="en"> <![endif]-->
    <!--[if IE 7 ]>    <html class="no-js ie7" lang="en"> <![endif]-->
    <!--[if IE 8 ]>    <html class="no-js ie8" lang="en"> <![endif]-->
    <!--[if (gte IE 9)|!(IE)]><!--> <html class="no-js" lang="en"> <!--<![endif]-->
    
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>{% if idea %}{{idea.title}} &middot; {{rusic.title}}{% else %}{{rusic.title}}{% endif %}</title>
    <meta name="description" content="">
    <meta name="author" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- Less -->
    <link rel="stylesheet/less" href="/stylesheets/photos.less">
    <script src="/javascripts/less.js"></script>
    
    <!-- Scripts -->
    <script src="http://cdnjs.cloudflare.com/ajax/libs/modernizr/2.0.6/modernizr.min.js"></script>
    {{ content_for_header }}
    <script src="/assets/jquery.countdown.min.js"></script>
    <script src="/javascripts/scripts.js"></script>
    
    <!-- Fav & touch icons -->
    <link rel="shortcut icon" href="images/favicon.ico">
    <link rel="apple-touch-icon" href="images/apple-touch-icon.png">
    <link rel="apple-touch-icon" sizes="72x72" href="images/apple-touch-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="114x114" href="images/apple-touch-icon-114x114.png">

</head>

    <body>
        
            <!-- Header -->
            <header class="container">
                <h1><a href="{{rusic.permalink}}" title="link to Social Space">{{rusic.title}}</a></h1>
                <div id="space-description">{{rusic.summary | markdown}}</div>
                <div data-expires_at="2011-08-27T15:10:00Z" id="timer" class="hasCountdown"><div id="t7_timer"><div id="t7_vals"><div id="t7_d" class="t7_numbs">000<span></span></div><div id="t7_h" class="t7_numbs">00<span></span></div><div id="t7_m" class="t7_numbs">00<span></span></div><div id="t7_s" class="t7_numbs">00<span></span></div></div><span class="countdown-text">left to submit your photos</span></div></div>
            </header>
        
            <div id="wrapper" class="container">
            
                <!-- Top bar -->
                <div class="topbar">
                    <div class="fill">
                        <div class="container">
                            {% if current_user %}
                            <!-- Navgiation -->
                            <div id="navigation">
                                <a href="#" title="#" class="btn primary showbtn">add new entry</a>
                            </div>
                            {% endif %}
                            <!-- User block -->
                            <div id="user-block">
                                {% if current_user %}
                                <div id="user">
                                    <img src="{{current_user.image_url}}" title="Your avatar from {{user.provider}}" class="avatar" width="30" height="30" />
                                    <span>welcome back, {{current_user.nickname}} <a href="/signout" title="logout of account">(logout)</a></span>
                                </div>
                                {% else %}
                                <ul class="auth">
                                    <li class="twitter"><a href="/auth/twitter" class="button"><span></span>Twitter</a></li>
                                    <li class="facebook"><a href="/auth/facebook" class="button"><span></span>Facebook</a></li>
                                </ul>
                                <div class="alert-message logintip">
                                    <i></i><p>to add a new entry, like an entry or comment login with:</p>
                                </div>
                                {% endif %}
                            </div>

                        </div>
                    </div>
                </div>
                
                
    {% if current_user %}
    <!-- Add new idea form -->
    <div id="new-entry">
        <h2>Add a new entry to {{rusic.title}}</h2>
        <form id="entry_form" method="post" action="{{rusic.permalink}}/ideas" class="clearfix" enctype="multipart/form-data">
        <fieldset>
            <div class="input"><label for="idea[title]">Entry title: </label><input class="span8" id="idea_title" name="idea[title]" type="text"></div>
            <div class="input"><label for="idea[content]">Detail: </label> <textarea id="idea_content" name="idea[content]" rows="3"></textarea></div>
            <div class="input"><label for="idea_images_attributes_0_file">Upload photo: </label> <input type="file" id="idea_images_attributes_0_file" name="idea[images_attributes][0][file]" /> </div>
            <div class="submit-group">
                <div class="checkarea"><input type="checkbox" name="idea[should_post_to_social]" value="1" checked />share this to {{current_user.provider}}?</div>
                <input type="submit" value="submit" class="btn primary submit" />
            </div>
        </fieldset>
        </form>
    </div>
{% endif %}
                

                <!-- Share buttons-->
                <div id="share-space">
                    <ul class="buttons">
                        <li class="twitter"><a href="https://twitter.com/share" class="twitter-share-button" data-count="horizontal" data-via="RusicHQ">Tweet</a><script type="text/javascript" src="//platform.twitter.com/widgets.js"></script></li>
                <li class="facebook"><iframe src="//www.facebook.com/plugins/like.php?href&amp;send=false&amp;layout=button_count&amp;width=90&amp;show_faces=false&amp;action=like&amp;colorscheme=light&amp;font&amp;height=21&amp;appId=126857104082710" scrolling="no" frameborder="0" style="border:none; overflow:hidden; width:90px; height:21px;" allowTransparency="true"></iframe></li>
                    </ul>
                    <span class="text">share this page:</span>
                </div>
                    {{ # This will be replace with the template content }}
                    {{yield}}
            </div>
        
    </body>
    
</html>
